{
    "extends": [
      "stylelint-config-prettier",
      "stylelint-config-recommended-scss"
    ],
    "plugins": [
      "stylelint-prettier",
      "stylelint-scss"
    ],
    "rules": {
      "max-nesting-depth": [
        3,
        {
          "ignore": [
            "blockless-at-rules",
            "pseudo-classes"
          ]
        }
      ],
      "prettier/prettier": [
        true,
        {
          "parser": "scss"
        }
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-react",
      "eslint-plugin-prettier",
      "jam3"
    ],
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        1,
        {
          "parser": "typescript"
        }
      ],
      "jam3/no-sanitizer-with-danger": [
        2,
        {
          "wrapperName": [
            "sanitize"
          ]
        }
      ],
      "react/no-unescaped-entities": 0
    }
  }